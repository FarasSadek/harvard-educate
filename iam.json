{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "AWS CloudFormation Template To Create IAM User.",
    "Parameters": {
        "UserName": {"Type": "String", "Default" : "harvarduser"}
  },
  "Resources" : {
      "$UserName" : {
         "Type" : "AWS::IAM::User",
         "Properties" : {
            "Path" : "/",
            "LoginProfile" : {
               "Password" : "$UserName"
            },
            "Policies" : [{
                  "PolicyName" : "poweruseraccess",
                  "PolicyDocument" : {
                     "Version": "2012-10-17",
                     "Statement" : [{
                        "Effect" : "Allow",
                        "Action" : [ "*" ],
                        "Resource" : [ "*" ]
                     }, 
                     {
                        "Effect" : "Deny",
                        "Action" : [ "iam:*" ],
                     }] 
                 }
            }]
         }
      } 
  }
}

